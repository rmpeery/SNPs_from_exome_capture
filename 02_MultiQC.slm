#!/bin/bash
#SBATCH --mail-user=<yourEmail>
#SBATCH --account=<yourAccount>
#SBATCH -t 0-1:00
#SBATCH --cpus-per-task=1
#SBATCH --mem-per-cpu=1G
#SBATCH --mail-type=ALL
#SBATCH --job-name=<jobName>

module load StdEnv/2020 python/3.13.2

source ~/multiqcENV/bin/activate # change to match where your env is

set -eou pipefail

DIR="<path2fastqc>"
OUT="$DIR/metrics/mutliqc"
NAME="reads_multiqc"

mkdir -p "$OUT"

multiqc "$DIR" -n "$NAME" -o "$OUT"

deactivate
